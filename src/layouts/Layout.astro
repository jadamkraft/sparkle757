---
import "../styles/global.css";

const { title = "Sparkle Solutions 757 – Judgment-Free Cleaning in the 757" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="min-h-screen bg-white text-slate-900 antialiased">
    <header class="sticky top-0 z-40 border-b border-slate-200 bg-white/80 backdrop-blur">
      <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3 md:px-6">
        <a href="/" class="flex items-center gap-2">
          <img
            src="/sparkle-logo.png"
            alt="Sparkle Solutions 757 logo"
            loading="lazy"
            class="h-8 w-auto"
          />
          <span
            class="bg-gradient-to-r from-pink-500 to-violet-600 bg-clip-text text-base font-semibold tracking-tight text-transparent md:text-lg"
          >
            Sparkle Solutions 757
          </span>
        </a>
        <a
          href="#instant-quote"
          class="inline-flex items-center justify-center rounded-full bg-gradient-to-r from-pink-500 to-violet-600 px-4 py-2 text-sm font-semibold text-white shadow-md shadow-pink-500/30 transition hover:shadow-lg hover:brightness-105 md:px-5"
        >
          Instant Quote
        </a>
      </div>
    </header>

    <main class="mx-auto flex max-w-5xl flex-col gap-12 px-4 py-8 md:px-6 md:py-12">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white">
      <div class="mx-auto max-w-5xl px-4 py-8 md:px-6 md:py-10">
        <div class="grid gap-6 md:grid-cols-[2fr,1fr] md:items-start">
          <div>
            <p
              class="bg-gradient-to-r from-pink-500 to-violet-600 bg-clip-text text-lg font-semibold text-transparent"
            >
              Serving the 757 with judgment-free sparkle.
            </p>
            <p class="mt-2 text-sm text-slate-600">
              Fully insured up to $1M. Flexible, kind cleaners who meet you where you are—no shame,
              just fresh starts.
            </p>
          </div>
          <div>
            <h2 class="text-sm font-semibold text-slate-900">Service Areas</h2>
            <ul class="mt-2 space-y-1 text-sm text-slate-600">
              <li>Virginia Beach</li>
              <li>Norfolk</li>
              <li>Chesapeake</li>
              <li>Cape Charles</li>
              <li>Princess Anne, MD</li>
            </ul>
          </div>
        </div>
        <p class="mt-6 text-xs text-slate-400">
          © {new Date().getFullYear()} Sparkle Solutions 757. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>


